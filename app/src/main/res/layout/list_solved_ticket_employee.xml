<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/maybank_brokenwhite"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtEmpNameSolvedTicketEmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Employee Name"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="@dimen/fontTextHeader"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtOnGoingTicketEmp"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Ticket"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="@dimen/fontTextHeader"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtIdTicketSolvedEmp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="001"
                    android:textColor="#000000"
                    android:textSize="@dimen/fontTextHeader"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Submit"
                        android:textColor="@color/maybank_black"
                        android:textSize="@dimen/fontTextContent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSubmitDateTicketSolvedEmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="Submit Date"
                        android:textColor="@color/maybank_black"
                        android:textSize="@dimen/fontTextContent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Assigned"
                        android:textColor="@color/maybank_black"
                        android:textSize="@dimen/fontTextContent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAssignDateTicketSolvedEmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Assigned Date"
                        android:textColor="@color/maybank_black"
                        android:textSize="@dimen/fontTextContent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solved"
                    android:textColor="@color/maybank_black"
                    android:textSize="@dimen/fontTextContent"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSolvedTicketSolvedEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solved Date"
                    android:textColor="@color/maybank_black"
                    android:textSize="@dimen/fontTextContent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Problem Name:"
                        android:textColor="@color/maybank_black"
                        android:textSize="@dimen/fontTextContent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtProbNameOnGoingEmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/maybank_black"
                        android:textSize="@dimen/fontTextContent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txtSolverOnGoingEmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Developer:"
                        android:textColor="@color/maybank_black"
                        android:textSize="@dimen/fontTextContent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDevNameSolvedEmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/maybank_black"
                        android:textSize="@dimen/fontTextContent" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtProbDetOnGoingEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Problem Detail"
                    android:textColor="@color/maybank_black"
                    android:textSize="@dimen/fontTextContent"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtDetailProbSolvedEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:editable="false"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:paddingTop="5dp"
                    android:textColor="@color/maybank_black"
                    android:textSize="@dimen/fontTextContent" />

                <TextView
                    android:id="@+id/txtViewDevNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Developer Note"
                    android:textColor="@color/maybank_black"
                    android:textSize="@dimen/fontTextContent"
                    android:textStyle="bold"  />

                <EditText
                    android:id="@+id/txtDevNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>